<%- include('partials/header', { title: post.title + ' - Mongoose Demo' }) %>

  <h1>
    <%= post.title %>
  </h1>

  <div class="post-content">
    <p>
      <%= post.body %>
    </p>
  </div>

  <div class="post-actions" style="margin-bottom:1rem;">
    <a class="btn btn-primary" href="/posts/<%= post.id %>/edit">Edit</a>

    <form class="delete-form" action="/posts/<%= post.id %>?_method=DELETE" method="post"
      style="display:inline-block;margin-left:0.5rem;">
      <button type="submit" class="btn danger" data-confirm="Are you sure you want to delete this post?">Delete</button>
    </form>
  </div>

  <p><a href="/posts/">‚Üê Back to All Posts</a></p>

  <%- include('partials/footer') %>